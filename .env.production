# Production Environment Variables
# Copy this file to .env.production.local and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_production_openai_api_key_here
OPENAI_MODEL=gpt-4

# ElevenLabs Configuration  
ELEVENLABS_API_KEY=your_production_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_preferred_voice_id

# Server Configuration
PORT=3001
NODE_ENV=production

# Next.js Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com

# Security
CORS_ORIGIN=https://your-domain.com

# Performance
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10
NARRATION_RATE_LIMIT_MAX_REQUESTS=5

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info